<h2>Editar Cuenta</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name, "Nombre" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :secname, "Apellido" %><br />
    <%= f.text_field :secname, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :email, "Correo" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>
  
   <div class="field">
    <%= f.label :address, "Direccion" %><br />
    <%= f.text_field :address, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :date_of_birth, "Fecha de Nacimiento" %><br>
    <%= f.date_select :date_of_birth, start_year: Date.today.year-60, end_year: Date.today.year, use_month_names: ["Enero","Febrero","Marzo","Abril","Junio","Julio","Agosto","Septiembre","Octubre","Noviembre","Diciembre"] %>
  </div>
  
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "Nueva contraseña"%> <i>(dejelo en blanco si no desea cambiarla)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmar nueva contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "Contarseña actual" %> <i>(Necesitamos su contraseña actual para confirmar el cambio)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Actualizar" %>
  </div>
<% end %>

<h3>Cancelar cuenta</h3>

<p>¿Incorforme? <%= button_to "Cancelar cuenta", registration_path(resource_name), data: { confirm: "¿Esta seguro?" }, method: :delete %></p>

<%= link_to "Atras", :back %>

