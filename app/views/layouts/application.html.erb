<!DOCTYPE html>
<html>
<head>
  <title>Mercado To Go</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
</head>
<body>
    <% if vendor_signed_in? %> 
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <!--%= image_tag "TOGO-02.png", size: "50"%-->
                    <%= link_to "Mercado #{image_tag("TOGO-02.png", size: "50")}".html_safe, landing_vendor_path, :class =>'navbar-brand link-unstyled' %>
                    </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><%= link_to "Mis productos", my_products_path %></li>
                        <!-- <li>< %= link_to "A cerca de", landing_about_path %></li> -->
                        <li><%= link_to "Contactenos", root_path %></li>
                        <li><%= link_to current_vendor.shopname, edit_vendor_registration_path %></li>
                        <li><%= link_to "Salir", destroy_user_session_path, method: :delete %></li>
                    </ul>
                </div>
            </div>
        </nav>
    <%else%>
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <!--%= image_tag "TOGO-02.png", size: "50"%-->
                    <%= link_to "Mercado #{image_tag("TOGO-02.png", size: "50")}".html_safe, root_path, :class =>'navbar-brand link-unstyled' %>
                    </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><%= link_to "Catalogo", products_path %></li>
                        <!-- <li><%= link_to "A cerca de", landing_about_path %></li> -->
                        <li><%= link_to "Contactenos", root_path %></li>
                        <% if user_signed_in? %>
                            <li>
                                <a class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %><b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><%= link_to "Editar Perfil", edit_user_registration_path %></li>
                                    <li><%= link_to "Mis Ordenes", profile_show_path %></li>
                                </ul>
                            </li>
                            <li><%= link_to "Salir", destroy_user_session_path, method: :delete %></li>
                        <% else %>
                            <li><%= link_to "Registrarse", new_user_registration_path %></li>
                            <li><%= link_to "Iniciar Session", new_user_session_path %></li>
                        <% end %>
                        <li><%= render 'layouts/cart_text' %></li>
                    </ul>
                </div>
            </div>
        </nav>
    <% end %>
    <div class="container">
        <%= yield %>
    </div>
    <!-- Footer: ed esta shit va dentro del body-->
    <footer>
        <div class="col-md-10 col-md-offset-1">
            <p>Copyright &copy; Bizarre Coding-Mercado to go</p>
            <p>insert info here</p>
            <p>1234567890</p>
        </div>
    </footer>
</body>
</html>
