<!DOCTYPE html>
<html>
<head>
  <title>Mercado To Go</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
</head>
<body>
    <% if vendor_signed_in? %> 
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <!--%= image_tag "TOGO-02.png", size: "50"%-->
                    <%= link_to "Mercado #{image_tag("TOGO-02.png", size: "50")}".html_safe, landing_vendor_path, :class =>'navbar-brand link-unstyled' %>
                    </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><%= link_to "Mis productos", my_products_path %></li>
                        <!-- <li>< %= link_to "A cerca de", landing_about_path %></li> -->
                        <li><%= link_to "Contactenos", root_path %></li>
                        <li><%= link_to current_vendor.shopname, edit_vendor_registration_path %></li>
                        <li><%= link_to "Salir", destroy_user_session_path, method: :delete %></li>
                    </ul>
                </div>
            </div>
        </nav>
    <%else%>
        <div class="block"></div>
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <!--%= image_tag "TOGO-02.png", size: "50"%-->
                    <%= link_to "Mercado #{image_tag("TOGO-02.png", size: "50")}".html_safe, root_path, :class =>'navbar-brand link-unstyled' %>
                    </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><%= link_to "Catalogo", products_path %></li>
                        <!-- <li><%= link_to "A cerca de", landing_about_path %></li> -->
                        <li><%= link_to "Contactenos", root_path %></li>
                        <% if user_signed_in? %>
                            <li>
                                <a class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %><b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><%= link_to "Editar Perfil", edit_user_registration_path %></li>
                                    <li><%= link_to "Mis Ordenes", profile_show_path %></li>
                                </ul>
                            </li>
                            <li><%= link_to "Salir", destroy_user_session_path, method: :delete %></li>
                        <% else %>
                            <li><%= link_to "Registrarse", new_user_registration_path %></li>
                            <li><%= link_to "Iniciar Session", new_user_session_path %></li>
                        <% end %>
                        <li>
                            <div class="cart-text">
                                <%= render 'layouts/cart_text' %>
                            <div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    <% end %>
    <div class="container">
        <%= yield %>
    </div>
    <br>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-xs-4">
                    <h3 class="subtitle">Menu</h3>
                    <%= link_to "Pagina principal", root_path%><br>
                    <%= link_to "Catalogo", products_path %>
                </div>
                <div class="col-md-4 col-xs-4">
                    <h3 class="subtitle">Compra</h3>
                    <%= link_to "Iniciar sessión", new_user_session_path %><br>
                    <%= link_to "Registrarse", new_user_registration_path %>
                </div>
                <div class="col-md-4 col-xs-4">
                    <h3 class="subtitle">Vende</h3>
                    <%= link_to "Iniciar sessión", new_vendor_session_path %><br>
                    <%= link_to "Registrarse", new_vendor_registration_path %>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row text-center">
                <p class="copyright">Copyright &copy; Bizarre Coding - Mercado to go</p>
                <!--p>support@bizarrecoding.com</p>
                <!--p>tel: (123)4567890</p-->
            </div>
        </div>
    </footer>
</body>
</html>
