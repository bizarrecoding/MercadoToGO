<h1>Resumen de compra</h1>

<h3>Datos del comprador</h3>

<p>Nombre: <%= current_user.name %> <%= current_user.secname %> </p>
<p>Correo: <%= current_user.email%></p>
<p>Direccion: <%= current_user.address%></p> 
<p>Metodo de pago: tarjeta de credito<p>
<p>Tarjeta #: xxxx-xxxx-xxxx-xxxx</p>

<br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Producto</th>
      <th>Precio</th>
      <th>Cantidad</th>
      <th>Accion</th>
    </tr>
  </thead>

  <tbody>
    <% @order_items.each do | item | %>
      <tr>
        <% product = Product.find_by_pId(item.product_id)%>  
        <td class="col-xs-4"><%= product.name %></td>
        <td class="col-xs-4"><%= item.unit_price %></td>
        <td class="col-xs-4"><%= item.quantity %></td>
        <td class="col-xs-4"><%= link_to 'ver', products_path %></td>
      </tr>
    <% end %>
      <tr>
        <td>Total: <%= current_order.subtotal%></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
  </tbody>
</table>
<br>
<%= form_for @purchase do |f| %>
    <%= hidden_field :user_id, value: current_user.email %>
    <%= hidden_field :order_id, value: @order_items.first.order_id %>
    <%= f.submit "Efectuar pago", class: "btn btn-danger"%>
    <!--%= button_to "Efectuar pago", purchase_checkout_path, class: "btn btn-danger"%-->
<% end %>
<br><br><br>

<%= link_to "Atras", cart_path%>