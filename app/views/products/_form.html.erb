<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :name, "Nombre del producto"%><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price, "Precio" %><br>
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :category, "Categoria"%><br>
    <%= f.text_field :category %>
  </div>
  <div class="actions">
    <% f.hidden_field :pId, :value => Product.last.pId + 1%>
    <% f.hidden_field :vendorId, :value => current_vendor.id  %>
    <%= f.submit "Crear Producto" , :class => "btn btn-primary opened"%>
  </div>
  <br><br><br>
<% end %>
