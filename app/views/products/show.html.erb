<p id="notice"><%= notice %></p>
<div class="well">

  <div class="row">
    <div class="col-xs-4">
      <%= image_tag @product.image, width:"260", height:"172"  ,:alt => "Tomates" %>
    </div>
    <div class="col-xs-4">
      <h4><%= @product.name %></small></h4>
      <p><%= @product.description %></p>
    </div>
    <div class="col-xs-4">
      <%= form_for @order_item, remote: true do |f| %>
      <h4 class="text-right">Precio: <span style="color: green"><%= number_to_currency @product.price %></span> COP</h4>
        <div class="input-group">
          <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
          <div class="input-group-btn">
            <%= f.hidden_field :product_id, value: @product.pId %>
            <%= f.submit "Add to Cart", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= link_to 'Atras', products_path %>
