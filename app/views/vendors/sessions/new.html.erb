<div class="panel mypanel text-center">  
  <h2>Iniciar Sesión</h2>
  <br>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field full">
      <%= f.label :email, "Correo" %><br />
      <%= f.email_field :email, autofocus: true, :class =>"full" %>
    </div>
    <br>
    <div class="field">
      <%= f.label :password, "Contraseña" %><br />
      <%= f.password_field :password, autocomplete: "off", :class =>"full" %>
    </div>
    <br>
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Recordarme" %>
      </div>
    <% end -%>
  
    <div class="actions">
      <%= f.submit "Iniciar sesión", :class =>"btn btn-primary full" %>
    </div>
  <% end %>
  <br>
  <%= render "vendors/shared/links" %>
</div>