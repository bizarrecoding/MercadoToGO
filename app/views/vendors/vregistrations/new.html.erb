<div class="panel regpanel">  
  <h2>Registrarse</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="row">
      <div class="col-md-6 col-xs-6 column">
        <div class="field">
          <%= f.label :email, "Correo" %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>
      
        <div class="field">
          <%= f.label :password, "ContraseÃ±a" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracteres minimo)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
      
        <div class="field">
          <%= f.label :password_confirmation, "Confirmar ContraseÃ±a" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
      </div>  
      <div class="col-md-6 col-xs-6 column">
        <div class="field">
          <%= f.label :shopname, "Nombre de Tienda" %><br />
          <%= f.text_field :shopname, autofocus: true %>
        </div>
      
        <div class="field">
          <%= f.label :address, "Direccion" %><br />
          <%= f.text_field :address, autofocus: true %>
        </div>
      </div>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Registrarse", :class => "btn btn-primary" %>
    </div>
  <% end %>
  
  <%= render "vendors/shared/links" %>
</div>